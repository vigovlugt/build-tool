{
    // JSONC
    "tasks": {
        "util.o": {
            "inputs": ["util.h", "util.c"],
            "outputs": ["util.o"],
            "command": "gcc -Wall -Wextra -c util.c",
        },
        "main.o": {
            "inputs": ["util.h", "main.c"],
            "outputs": ["main.o"],
            "command": "gcc -Wall -Wextra -c main.c",
        },
        "main": {
            "inputs": [":util.o", ":main.o"],
            "outputs": ["main"],
            "command": "gcc util.o main.o -o main",
        },
        "run": {
            "inputs": [":main"],
            "command": "./main",
            "cache": false,
        },
        "clean": {
            "command": "rm -f *.o main",
            "cache": false,
        },
    },
}
